<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_agenda"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_acara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="2"
                android:textSize="16sp"
                android:text=".."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_grey"/>
                <TextView
                    android:id="@+id/txt_tempat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tgl_jam"/>
                <TextView
                    android:id="@+id/txt_tanggal_jam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bidang"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txt_bidang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seksi"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txt_seksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/staff"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txt_hadir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hadir"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txt_semua_hadir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorAbu"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="3dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_share_whatsapp"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:background="@drawable/btn_accept_background"
                    android:text="@string/share"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/ic_whatsapp_white"
                    android:layout_marginEnd="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_detail"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_red"
                    android:text="@string/detail"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textAllCaps="false"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_gravity="end"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>