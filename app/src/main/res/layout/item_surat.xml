<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/txt_tgl_surat_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/colorAbu"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_tgl_disposisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/colorAbu"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_dari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/colorAbu"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_acara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorAbu"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:maxLines="2"/>

        <LinearLayout
            android:id="@+id/layout_tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location_grey"/>
            <TextView
                android:id="@+id/txt_tempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tgl_jam"/>
            <TextView
                android:id="@+id/txt_tanggal_jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perihal"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_perihal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bidang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bidang"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_bidang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_seksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seksi"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_seksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staff"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_hadir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ket"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_isi_surat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isi"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_isi_surat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_keterangan_dp_balik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ket_dispo_balik"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_keterangan_dp_balik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorAbu"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_detail"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_red"
            android:text="@string/detail"
            android:textColor="#fff"
            android:textSize="12sp"
            android:padding="8dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="end"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>